<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/gameplayLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <!-- ESTRUCTURA HECHA CON IA -->

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarGameplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:menu="@menu/toolbar_general" />

    <!-- Imagen del ahorcado -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgAhorcado"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            android:src="@drawable/img_ahorcado_0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textWord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="24dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="32sp"
                android:textStyle="bold" />

            <GridLayout
                android:id="@+id/letterGrid"
                android:layout_width="match_parent"
                android:layout_height="261dp"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:alignmentMode="alignMargins"
                android:columnCount="7"
                android:gravity="center"
                android:rowCount="4"
                android:useDefaultMargins="true" />
        </LinearLayout>
    </LinearLayout>

    <!-- Palabra oculta -->

    <!-- Grid con botones de letras -->

</LinearLayout>
