<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:background="#FF9700"

    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="16dp">
    <!-- ESTRUCTURA HECHA CON IA -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Fila 1: Nivel + Palabra -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textLevelName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:text="Palabra:"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textWord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Fila 2: Cantidad de letras -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textLettersLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Letras:"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textLettersCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="TextView"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>

    <!-- Imagen de dificultad -->
    <ImageView
        android:id="@+id/imageDifficulty"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="centerCrop"
        app:srcCompat="@android:drawable/btn_star_big_on" />

</LinearLayout>
